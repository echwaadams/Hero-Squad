{{#partial "content"}}
   <section class="landing-pg">
       <div class="land-left"></div>
       <div class="land-right"></div>
       <form class="form" action="/squad/new" method="post">
            <h1>Create Your Squad</h1>
            <div class="form-group">
                <input type="text" placeholder="Enter the Squad name" name="squadName" class="form-control" required>
            </div>
            <div class="form-group">
                <input type="number" placeholder="Enter the max size" name="size" class="form-control" required>
            </div>
            <div class="form-group">
                <input type="text" placeholder="Enter the Mission name" name="cause" class="form-control" required>
            </div>
       </form>
   </section>
{{/partial}}
{{> layout.hbs}}